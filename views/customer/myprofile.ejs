<body class="customer">
  <a href="home"><b style="font-size:x-large;">HOME</b></a>
<hr/>
  <%- include('./_inform.ejs') %>
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
				<form class="login100-form validate-form flex-sb flex-w" action="./myprofile" method="POST">
					<span class="login100-form-title p-b-32">
						My Profile
					</span>

					<span class="txt1 p-b-11">
						Username
					</span>
					<div class="wrap-input100 validate-input m-b-36" data-validate = "Username is required">
						<input type="text" name="txtUsername" value="<%=session.customer.username%>" readonly />
						<span class="focus-input100"></span>
					</div>
					
					<span class="txt1 p-b-11">
						Password
					</span>
					<div class="wrap-input100 validate-input m-b-36" data-validate = "Password is required">
						<input type="password" name="txtPassword" value="<%=session.customer.password%>" pattern=".{3,}" required />
						<span class="focus-input100"></span>
					</div>
					
					<span class="txt1 p-b-11">
						Name
					</span>
					<div class="wrap-input100 validate-input m-b-36" data-validate = "Password is required">
						<input type="text" name="txtName" value="<%=session.customer.name%>" required />
						<span class="focus-input100"></span>
					</div>

					<span class="txt1 p-b-11">
						Phone
					</span>
					<div class="wrap-input100 validate-input m-b-36" data-validate = "Password is required">
						<input type="tel" name="txtPhone" value="<%=session.customer.phone%>" pattern="0[0-9]{9}" required />
						<span class="focus-input100"></span>
					</div>

					<span class="txt1 p-b-11">
						Email
					</span>
					<div class="wrap-input100 validate-input m-b-36" data-validate = "Password is required">
						<input type="email" name="txtEmail" value="<%=session.customer.email%>" readonly />
						<span class="focus-input100"></span>
					</div>

					<div class="container-login100-form-btn">
						<button class="login100-form-btn">
							Update
						</button>
					</div>

				</form>
			</div>
		</div>
	</div>
	

	<div id="dropDownSelect1"></div>
	
<!--===============================================================================================-->
	<script src="/public/customer-signin/vendor/jquery/jquery-3.2.1.min.js"></script>
