            <%  } else {  %>
              <li><a href="./login">Login</a> | <a href="./signup">Sign-up</a></li>
            <%  } %>
          </ul>
        </div>
      </nav>

      <header class="site-header">
        <div class="row align-items-center">
          <div class="col-5 col-md-3">
             
          </div>
          <div class="col-2 col-md-6 text-center site-logo-wrap">
