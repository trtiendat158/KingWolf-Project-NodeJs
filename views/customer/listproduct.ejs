  <body class="bg-light">
    <body data-spy="scroll" data-target="#ftco-navbar-spy" data-offset="0">
    <div class="site-wrap"> 
      <nav class="site-menu" id="ftco-navbar-spy">
        <div class="site-menu-inner" id="ftco-navbar">        
          <ul class="list-unstyled">
            <%  if (session.customer) {  %>
              <li>Hello, <b><%=session.customer.name%></b></li>
              <li>My cart have <b><%= (session.mycart) ? session.mycart.length : 0 %></b> items</li>
            <%  }  %>
            <hr/>
            <li><a href="home">Home</a></li>
            <%  if (typeof(cats) !== 'undefined') { for (var cat of cats) { %>
              <li><a href="./listproduct?catID=<%=cat._id%>"><%=cat.name%></a></li>
            <%  } } %>
            <%  if (session.customer) {  %>
            <li><a href="myprofile">My Profile</a></li>
            <li><a href="myorders">My Order</a></li>
            <li><a href="mycart">My Cart</a></li>
